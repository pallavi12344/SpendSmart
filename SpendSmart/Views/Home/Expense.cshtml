@{
    ViewData["Title"] = "Expense Page";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr />
    <h3>Total Expenses Rs @ViewBag.TotalExpense </h3>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Value.ToString("C")</td>
                    <td>@expense.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                        <a class="btn btn-danger" asp-area="" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                </tr>

            }
        </tbody>
    </table>
</div>